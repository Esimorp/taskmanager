<!DOCTYPE html>
<html>
<head>
    <link href="//cdn.bootcss.com/semantic-ui/2.2.4/semantic.min.css" rel="stylesheet">
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdn.bootcss.com/semantic-ui/2.2.4/semantic.min.js"></script>
    <link href="//cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'/>

</head>
<body>
<div class="container">
    <div class="header-nav">
        <div class="ui top attached tabular menu">
            <div class="item">创建项目</div>
            <div class="right menu">
                <div class="item">
                    <div class="ui icon input">
                        <input type="text" placeholder="Search...">
                        <i class="search link icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <% include ./base/left_nav.ejs %>
        <div class="main-panel">
            <div style="max-width: 70%">
                <form class="ui form" action="/projects/new" method="post">
                    <div class="field">
                        <label>项目名称</label>
                        <input type="text" name="projectName" placeholder="projectName">
                    </div>
                    <div class="field">
                        <label>项目代号</label>
                        <input type="text" name="projectCode" placeholder="projectCode">
                    </div>
                    <div class="field">
                        <label>产品名称</label>
                        <input type="text" name="productionName" placeholder="productionName">
                    </div>
                    <div class="field">
                        <label>产品型号</label>
                        <input type="text" name="productionCode" placeholder="productionCode">
                    </div>
                    <div class="field">
                        <label>产品代号</label>
                        <input type="text" name="productionVersion" placeholder="productionVersion">
                    </div>
                    <div class="field">
                        <label>描述</label>
                        <textarea name="description"></textarea>
                    </div>
                    <button class="ui primary button medium" type="submit">创建</button>
                </form>
            </div>
        </div>
    </div>
</div>

</body>
</html>
