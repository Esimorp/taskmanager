<!DOCTYPE html>
<html>
<head>
    <link href="//cdn.bootcss.com/semantic-ui/2.2.4/semantic.min.css" rel="stylesheet">
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdn.bootcss.com/semantic-ui/2.2.4/semantic.min.js"></script>
    <link href="//cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'/>

</head>
<body>
<div class="container">
    <div class="header-nav">
        <div class="ui top attached tabular menu">
            <div class="item">项目</div>
            <div class="right menu">
                <div class="item">
                    <div class="ui icon input">
                        <input type="text" placeholder="Search...">
                        <i class="search link icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <% include ./base/left_nav.ejs %>
        <div class="main-panel">
            <div>
                <a class="ui primary button medium" href="/projects/new">创建项目</a>
            </div>
            <div class="ui items">
                <% projects.forEach(function(project){ %>
                <div class="item">
                    <div class="content">
                        <a class="header" href="/projects/<%= String(project._id) %>">
                            <%= project.project_name %>
                        </a>
                        <div>
                            <label class="ui teal mini tag label">进行中</label>
                        </div>
                        <div class="description">
                            <p>项目代号: <%= project.project_code %></p>
                            <p>描述: <%= project.description %></p>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

</body>
</html>
